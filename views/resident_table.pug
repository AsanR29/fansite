mixin resident_table_l3(master)
    div(class=master.container_classes)
        - var i = -1;
        - var k = 0;
        each element in master.elements
            - i += 1;
            case (master.types[i])
                when 0
                    h4(class=element.header_classes) #{element.header_text}
                when 1
                    table(class=element.table_classes)
                        tbody 
                            - var hi = 0;
                            each record in element.records 
                                if(hi == 0)
                                    tr(class=element.row_header_classes)
                                        th(class=element.column_header_classes[hi] +" "+record.columns[0].classes) #{record.columns[0].content}
                                        - ++hi;
                                        th(class=element.column_header_classes[hi] +" "+record.columns[0].classes)
                                            input(name=master.elements[2].names[k] class="table-header-normalise" value=record.columns[1].content class=record.columns[1].classes)
                                            - ++k;
                                        - ++hi;
                                else
                                    tr(class=record.classes)
                                        td(class=element.column_header_classes[hi] +" "+record.columns[0].classes) #{record.columns[0].content}
                                        td(class=element.column_header_classes[hi] +" "+record.columns[1].classes)
                                            input(name=master.elements[2].names[k] value=record.columns[1].content class=record.columns[1].classes)
                                            - ++k;
                when 3
                    div(class=element.classes)
                        input(type="submit" value="SAVE")
                when 4
                    //nothing