mixin resident_table_l1(master)
    div(class=master.container_classes)
        - var i = -1;
        each element in master.elements
            - i += 1;
            case (master.types[i])
                when 0
                    h4(class=element.header_classes) #{element.header_text}
                when 1
                    table(class=element.table_classes)
                        tbody 
                            - var hi = 0;
                            each record in element.records 
                                if(hi == 0)
                                    tr(class=element.row_header_classes)
                                        each column in record.columns 
                                            th(class=element.column_header_classes[hi] +" "+column.classes) #{column.content}
                                            - ++hi;
                                else
                                    tr(class=record.classes)
                                        each column in record.columns
                                            td(class=column.classes) #{column.content}
                when 2
                    div(class=element.classes)
                        span Affection: 
                            - var affection = element.affection*21.225;
                            img(src="../svgs/stars_full.svg" style="display:inline-block; height:20px; width:"+affection + "px; object-fit: cover; object-position: 0% 0;")
                when 3 
                    div(class=element.classes)
                        a(href="/balmora/" + element.affection, class="link text-blue-500") Read more

